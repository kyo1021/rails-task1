<div class="main_container">
   <div class="information">
     <h2>スケジュール詳細</h2>
   </div>

   <table> 
     <tr>
       <th>タイトル</th>
       <td><%= @user.title %></td>
     </tr>
     <tr>
       <th>開始日</th>
       <td><%= @user.start_at.strftime("%Y年%m月%d日") %></td>
     </tr>
     <tr>
       <th>投稿日時</th>
       <td><%= @user.end_at.strftime("%Y年%m月%d日") %></td>
     </tr>
     <tr>
       <th>終日</th>
       <td><% if @user.is_all_day == 1 %><strong>〇</strong><% end %></td>
     </tr>
     <tr>
       <th>スケジュールメモ</th>
       <td><pre><%= @user.memo %></pre></td>
     </tr>
   </table>
   <div>
     <ul>
       <li><%= link_to "スケジュール一覧に戻る", :users %></li>
       <li><%= link_to "スケジュールを編集する", [:edit, @user] %></li>
       <li><%= link_to "スケジュールを削除", @user, data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %></li>
     </ul>
   </div>
 </div>